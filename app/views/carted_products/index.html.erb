<h1>Checkout Page</h1>

<% @carted_products.each do |carted_product| %>
  <h3><%= carted_product.product.name %> - <%= carted_product.quantity %> - <%= link_to "remove", "/carted_products/#{carted_product.id}", method: :delete %></h3>
<% end %>

<%= link_to "Buy Now!", "/orders", method: :post, class: "btn btn-success" %>