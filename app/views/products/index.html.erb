<% @products.each_slice(3) do |product_slice| %>
  <div class="row">
    <% product_slice.each do |product| %>
      <div class="col-md-4 col-sm-6 product-index-single">
        <div class="well">
          <h2>Name: <a href="/products/<%= product.id %>"><%= product.name %></a></h2>
          <h5>Stock: <%= product.stock %></h5>
          <h3>Price: <%= number_to_currency(product.price) %></h3>
          <img src="<%= product.image %>" alt="">
          <h4>Description: <%= product.description %></h4>
        </div>
      </div>
    <% end %>
  </div>
<% end %>